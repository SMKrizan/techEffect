<ol class='post-list'>
    {{!-- works with home-routes' getAll() to serialize response for each data object --}}
    {{#each posts as |post|}}
    <li>
        <article class='post'>
            <div class='title'>
                <h3>{{ post.title }}</h3>
            </div>
            <div class='meta'>
                {{ post.comment_count }} comment(s) by {{ post.user.username }} on
                {{ post.created_at }}
                |
                <a href='/post/{{ post.id }}'>{{ post.comments.length }} comment(s)</a>
            </div>
        </article>
    </li>
    {{/each}}
</ol>